{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "initialize git",
            "type": "shell",
            "command": "${workspaceFolder}/.scripts/initialize-git.sh",
            "options": {
                "statusbar": {
                  "label": "$(tools) Initialize git"
                }
              }
        },
        {
            "label": "restart node",
            "type": "shell",
            "command": "${workspaceFolder}/.scripts/restart-node.sh",
            "options": {
                "statusbar": {
                    "label": "$(refresh) Restart Node"
                }
            }
        },
        {
            "label": "stop node",
            "type": "shell",
            "command": "${workspaceFolder}/.scripts/stop-node.sh",
            "options": {
                "statusbar": {
                    "label": "$(stop-circle) Stop Node"
                }
            }
        },
        {
            "label": "psinode logs",
            "type": "shell",
            "command": "${workspaceFolder}/.scripts/psinode-logs.sh",
            "options": {
                "statusbar": {
                    "label": "$(output) Psinode Logs"
                }
            }
        },
        {
            "label": "traefik logs",
            "type": "shell",
            "command": "${workspaceFolder}/.scripts/traefik-logs.sh",
            "options": {
                "statusbar": {
                    "label": "$(output) Traefik Logs"
                }
            }
        }
    ]
}
